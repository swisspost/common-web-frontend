{
  "name": "@swisspost/web-styles",
  "version": "5.0.0-alpha.3",
  "description": "Common styles for the Swiss Post web platform.",
  "author": "Swiss Post <oss@post.ch>",
  "license": "Apache-2.0",
  "publishConfig": {
    "directory": "./dist",
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf out-tsc dist/*",
    "reset": "rimraf node_modules package-lock.json && npm run clean",
    "prebuild": "npm run clean",
    "build": "gulp build",
    "build:ci": "gulp build",
    "lint": "stylelint src/**/*.scss",
    "lint:fix": "stylelint src/**/*.scss --fix",
    "format": "prettier src/**/*.scss --write",
    "test": "jest",
    "test:ci": "jest",
    "start": "gulp watch"
  },
  "dependencies": {
    "@popperjs/core": "2.11.5",
    "bootstrap": "5.1.3"
  },
  "devDependencies": {
    "autoprefixer": "9.8.8",
    "glob": "7.2.3",
    "gulp": "4.0.2",
    "gulp-postcss": "8.0.0",
    "gulp-sass": "5.1.0",
    "jest": "25.5.4",
    "postcss": "8.4.14",
    "postcss-scss": "4.0.4",
    "prettier": "2.7.1",
    "rimraf": "2.7.1",
    "sass": "1.53.0",
    "stylelint": "14.9.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-sass-guidelines": "9.0.1",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.3.0"
  },
  "sass": {
    "includePaths": [
      "node_modules"
    ],
    "outputDir": "./dist",
    "tscOutDir": "./out-tsc/lib"
  }
}
